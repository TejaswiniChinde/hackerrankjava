//oops example3
class Circle{
    double radius,pi;

    void printDiameter(){
        System.out.println("Diameter is: " + 2*radius);
    }
    void printArea(){
        System.out.println("Area is: " +pi*radius*radius);
    }
    void printPerimeter(){
        System.out.println("Perimeter is: " + 2*pi*radius*radius);
    }

}
public class Thur152{
    public static void main(String[] args){
        Circle r1=new Circle();
        r1.radius=5.4;
        r1.pi=3.14;
        r1.printDiameter();
        r1.printArea();
        r1.printPerimeter();
        
    }
}
